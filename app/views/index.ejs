<div class="row text-center">
  <h1><span class="glyphicon glyphicon-lock"></span>Aplicativo de Visitas</h1>

  <div class="row">
    <a href="/login" class="btn btn-default"><span class="glyphicon glyphicon-user"></span> Acceder </a>
    <a href="/signup" class="btn btn-default"><span class="glyphicon glyphicon-user"></span> Registrarse </a>
  </div>
  <div class="row">
    <br>
    <a href="/auth/facebook" class="btn btn-primary" id="fb"><span class="fa fa-facebook glyphicon glyphicon-thumbs-up"></span> Facebook</a>

  </div>
  <div class="row">
    <br>
      <% if (message.length > 0) { %>
        <div class="alert alert-danger"><span class="glyphicon glyphicon-exclamation-sign"></span> <%= message %></div>
      <% } %>
      <div>
        <a class="btn btn-danger" id="noCookies" onClick="denegarCookies()"><span class="glyphicon glyphicon-remove-circle"></span> No cookies</a>
      </div>
  </div>
</div>